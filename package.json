{
  "name": "nodejs-backend-boilerplate",
  "version": "1.0.0",
  "description": "Professional, universal, production-ready Node.js backend boilerplate",
  "main": "src/app.js",
  "type": "module",
  "scripts": {
    "dev": "nodemon src/app.js",
    "start": "node src/app.js",
    "test": "NODE_OPTIONS=--experimental-vm-modules jest --coverage",
    "test:watch": "NODE_OPTIONS=--experimental-vm-modules jest --watch",
    "lint": "eslint src --fix",
    "format": "prettier --write .",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:build": "docker-compose build",
    "seed": "node scripts/seed.js",
    "migrate:up": "migrate-mongo up",
    "migrate:down": "migrate-mongo down",
    "migrate:create": "migrate-mongo create",
    "prepare": "husky install"
  },
  "keywords": [
    "node",
    "express",
    "mongoose",
    "rest-api",
    "backend",
    "template",
    "boilerplate",
    "production-ready"
  ],
  "author": "Sahinur Islam",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/devSahinur/nodejs-backend-boilerplate.git"
  },
  "bugs": {
    "url": "https://github.com/devSahinur/nodejs-backend-boilerplate/issues"
  },
  "homepage": "https://github.com/devSahinur/nodejs-backend-boilerplate#readme",
  "dependencies": {
    "express": "^4.18.2",
    "mongoose": "^8.1.0",
    "dotenv": "^16.3.1",
    "joi": "^17.11.0",
    "bcryptjs": "^2.4.3",
    "jsonwebtoken": "^9.0.2",
    "helmet": "^7.1.0",
    "cors": "^2.8.5",
    "express-rate-limit": "^7.1.5",
    "express-mongo-sanitize": "^2.2.0",
    "winston": "^3.11.0",
    "morgan": "^1.10.0",
    "stripe": "^14.19.0",
    "nodemailer": "^6.9.7",
    "firebase-admin": "^12.0.0",
    "he": "^1.2.0",
    "bull": "^4.12.0",
    "ioredis": "^5.3.2",
    "moment": "^2.30.1",
    "node-cron": "^3.0.3",
    "multer": "^1.4.5-lts.1",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.0",
    "migrate-mongo": "^11.0.0",
    "prom-client": "^15.1.0",
    "compression": "^1.7.4",
    "passport": "^0.7.0",
    "passport-jwt": "^4.0.1",
    "http-status": "^1.7.3",
    "validator": "^13.11.0",
    "xss-clean": "^0.1.4",
    "axios": "^1.6.8"
  },
  "devDependencies": {
    "nodemon": "^3.0.3",
    "jest": "^29.7.0",
    "supertest": "^6.3.4",
    "eslint": "^8.56.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-jest": "^27.6.3",
    "prettier": "^3.2.4",
    "husky": "^8.0.3",
    "@commitlint/cli": "^18.6.0",
    "@commitlint/config-conventional": "^18.6.0",
    "lint-staged": "^15.2.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}
